{namespace bgm.hml.ui.cards}

/**
 * Renders description of every card
 * @param set {String} set that the card comes in
 * @param name {String} name of the card
 */
{template .description}
{switch $set}
  {case 'base'}
    {call bgm.hml.ui.cards.base.description}
      {param name: $name/}
    {/call}
{/switch}
{/template}
